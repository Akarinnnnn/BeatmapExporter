<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BeatmapExporterGUI.ViewModels.HomePage"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="1024"
             x:Class="BeatmapExporterGUI.Views.HomePage.NotLoadedView"
             x:DataType="vm:NotLoadedViewModel">

  <StackPanel Spacing="20"
              HorizontalAlignment="Center">

    <TextBlock FontSize="24">There is no osu! database currently loaded.</TextBlock>

    <Button Command="{Binding OpenCommand}">
      Select an osu!lazer database...
    </Button>

  </StackPanel>
  
</UserControl>
